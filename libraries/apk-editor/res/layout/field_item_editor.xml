<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  >
  
  <LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  >
  <TextView
    android:id="@+id/access_flags_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="访问修饰符："
    android:textSize="15dip" />
<EditText
    android:id="@+id/access_flags_edit"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="17dip" />

</LinearLayout>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  >
  <TextView
    android:id="@+id/field_name_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="名称："
    android:textSize="15dip" />
<EditText
    android:id="@+id/field_name_edit"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="17dip" />

</LinearLayout>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  >
  <TextView
    android:id="@+id/field_descriptor_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="描述： "
    android:textSize="15dip" />
<EditText
    android:id="@+id/field_descriptor_edit"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textSize="17dip" />

</LinearLayout>


</LinearLayout>
